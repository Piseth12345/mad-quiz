<?xml version="1.0" encoding="utf-8"?>

w<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Cover image -->
    <ImageView
        android:id="@+id/cover_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image2" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_marginStart="30dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="160dp"

        android:src="@drawable/image1" />

    <TextView
        android:id="@+id/user_name"
        android:layout_marginStart="20dp"
        android:layout_below="@id/cover_image"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Sok Sao"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/user_follower"
        android:layout_marginStart="20dp"
        android:layout_below="@id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="3.2K Friends" />

    <!-- Bio of the user -->
    <TextView
        android:id="@+id/user_bio"
        android:layout_marginStart="20dp"
        android:layout_below="@id/user_name"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Love travelling" />

    <Button
        android:id="@+id/button4"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="333dp"
        android:layout_marginEnd="0dp"
        android:text="..." />

    <Button
        android:id="@+id/button5"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="203dp"
        android:layout_marginTop="334dp"
        android:text="Edit Profile" />

    <Button
        android:id="@+id/button6"
        android:layout_width="189dp"
        android:background="#002AFF"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="333dp"
        android:text="+Add story" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/button6"
        android:text="Student at Royal University Phnom Penh"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/button6"
        android:text="Single"/>
    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/button6"
        android:text="See your About info"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="394dp"
        android:layout_height="37dp"
        android:layout_below="@+id/info"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="474dp"
        android:text="Edit public detail"
        android:textColor="#0027FF" />


</RelativeLayout>











